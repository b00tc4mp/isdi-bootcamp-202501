    } else if (
        (jugador2 === "piedra" && jugador1 === "tijera") ||
        (jugador2 === "tijera" && jugador1 === "papel") ||
        (jugador2 === "papel" && jugador1 === "piedra")
    ) {
        console.log("隆Jugador 2 gana! ")
        
    //entrada inv谩lida o error ortogr谩fico
    } else {
        console.log("Entrada inv谩lida. Aseg煤rate de escribir correctamente 'piedra', 'papel', o 'tijera' 锔")
    }
    return; //el return se pone para evitar que se escriba undefined
}    

//funci贸n para a帽adir los emoticonos a las elecciones
function formatearElecci贸n(elecci贸n) {
    if (elecci贸n === "piedra") return " Piedra"
    if (elecci贸n === "papel") return " Papel"
    if (elecci贸n === "tijera") return "锔 Tijera"
}

